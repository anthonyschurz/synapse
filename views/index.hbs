  <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/satellizer/0.13.4/satellizer.min.js"></script>

  <!-- custom script (angular app) -->
  <script type="text/javascript" src="scripts/app.js"></script>

  <title>Synapse</title>
</head>

<body ng-controller="MainController as main" class="grey lighten-3">
  <nav class="navbar navbar-default grey darken-3">
      <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
        <ul class="nav navbar-nav">
          <li><a href="/" class="brand-logo">NameJar</a></li>
        </ul>
        <ul id="nav-mobile" class="right hide-on-med-and-down">
          <li ng-show="!main.currentUser()"><a ui-sref="signup">Sign Up</a></li>
          <li ng-show="!main.currentUser()"><a ui-sref="login">Log In</a></li>
          <li ng-show="main.currentUser()"><a data-target="aboutus" class="modal-trigger">About Us</a></li>
          <li ng-show="main.currentUser()"><a data-target="contactus" class="modal-trigger">Contact Us</a></li>
          <li ng-show="main.currentUser()"><a ui-sref="profile">\{{main.currentUser().displayName}}</a></li>
          <li ng-show="main.currentUser()"><a ui-sref="logout">Log Out</a></li>
        </ul>
      </div>
  </nav>

  <div id="aboutus" class="modal">
    <div class="modal-content">
